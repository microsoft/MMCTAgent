FROM python:3.10-slim

# Install system-level dependencies
RUN apt-get update && \
    apt-get install -y \
      ffmpeg \
      libgl1-mesa-glx \
      libglib2.0-0 \
      libsm6 \
      libxext6 \
      libxrender1 \
      libfontconfig1 \
      libice6 \
      libxcb1 \
      libxau6 \
      libxdmcp6 \
      build-essential \
      git \
      curl \
      libgomp1 \
      libjpeg-dev \
      libpng-dev \
      pkg-config && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy project files for dependency resolution
COPY pyproject.toml .
COPY requirements.txt .
COPY setup.py .

# Copy core package and available directories
COPY mmct/ mmct/
COPY config/ config/
COPY docs/ docs/

# Install Python dependencies
RUN pip install --upgrade pip>=24.3
RUN pip install --no-cache-dir -r requirements.txt

# Create directories for runtime
RUN mkdir -p /app/media /app/logs