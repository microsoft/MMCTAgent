# Production Environment Configuration
# Copy this file to .env in the root directory and update with your values

# Application Settings
APP_NAME=MMCT Agent
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# LLM Provider Configuration
LLM_PROVIDER=azure
LLM_ENDPOINT=https://your-prod-resource.openai.azure.com/
LLM_DEPLOYMENT_NAME=gpt-4o
LLM_MODEL_NAME=gpt-4o
LLM_API_VERSION=2024-08-01-preview
LLM_USE_MANAGED_IDENTITY=true
# LLM_API_KEY=  # Use managed identity in production
LLM_VISION_DEPLOYMENT_NAME=gpt-4o
LLM_VISION_API_VERSION=2024-08-01-preview
LLM_TIMEOUT=200
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.0

# Search Provider Configuration
SEARCH_PROVIDER=azure_ai_search
SEARCH_ENDPOINT=https://your-prod-search.search.windows.net
SEARCH_USE_MANAGED_IDENTITY=true
# SEARCH_API_KEY=  # Use managed identity in production
SEARCH_INDEX_NAME=production
SEARCH_TIMEOUT=30

# Embedding Provider Configuration
EMBEDDING_PROVIDER=azure
EMBEDDING_SERVICE_ENDPOINT=https://your-prod-resource.openai.azure.com/
EMBEDDING_SERVICE_DEPLOYMENT_NAME=text-embedding-3-small
EMBEDDING_SERVICE_API_VERSION=2024-08-01-preview
EMBEDDING_USE_MANAGED_IDENTITY=true
# EMBEDDING_SERVICE_API_KEY=  # Use managed identity in production
EMBEDDING_TIMEOUT=200

# Transcription Provider Configuration
TRANSCRIPTION_PROVIDER=azure
SPEECH_SERVICE_ENDPOINT=https://your-prod-speech.cognitiveservices.azure.com/
SPEECH_SERVICE_DEPLOYMENT_NAME=whisper
SPEECH_SERVICE_API_VERSION=2024-08-01-preview
SPEECH_USE_MANAGED_IDENTITY=true
# SPEECH_SERVICE_KEY=  # Use managed identity in production
SPEECH_TIMEOUT=200

# Storage Configuration
STORAGE_PROVIDER=azure_blob
STORAGE_ACCOUNT_NAME=your-prod-storage-account
STORAGE_CONTAINER_NAME=production
STORAGE_USE_MANAGED_IDENTITY=true
# STORAGE_CONNECTION_STRING=  # Use managed identity in production

# Security Configuration
KEYVAULT_URL=https://your-prod-keyvault.vault.azure.net/
ENABLE_SECRETS_MANAGER=true
MANAGED_IDENTITY_CLIENT_ID=your-managed-identity-client-id

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mmct-prod.log
LOG_ENABLE_JSON=true
LOG_ENABLE_FILE=true
LOG_MAX_FILE_SIZE=50 MB
LOG_RETENTION_DAYS=30


# Legacy environment variables (for backward compatibility)
MANAGED_IDENTITY=true
AZURE_OPENAI_ENDPOINT=https://your-prod-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_AI_SEARCH_ENDPOINT=https://your-prod-search.search.windows.net