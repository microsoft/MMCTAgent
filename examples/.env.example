# Example Environment Configuration
# Copy this file and update with your actual values

# Application Settings
APP_NAME=MMCT Agent
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# LLM Provider Configuration
LLM_PROVIDER=azure
LLM_USE_MANAGED_IDENTITY=true
LLM_TIMEOUT=200
LLM_MAX_RETRIES=2
LLM_TEMPERATURE=0.0
LLM_ENDPOINT=https://your-openai-endpoint.openai.azure.com/
LLM_DEPLOYMENT_NAME=gpt-4o
LLM_MODEL_NAME=gpt-4o
LLM_API_VERSION=2024-08-01-preview
LLM_API_KEY=your-api-key-if-not-using-managed-identity
LLM_VISION_DEPLOYMENT_NAME=gpt-4o
LLM_VISION_API_VERSION=2024-08-01-preview

# Search Provider Configuration
SEARCH_PROVIDER=azure_ai_search
SEARCH_USE_MANAGED_IDENTITY=true
SEARCH_INDEX_NAME=dummy-index
SEARCH_TIMEOUT=30
SEARCH_ENDPOINT=https://your-search-service.search.windows.net
SEARCH_API_KEY=your-search-api-key-if-not-using-managed-identity

# Embedding Provider Configuration
EMBEDDING_PROVIDER=azure
EMBEDDING_USE_MANAGED_IDENTITY=true
EMBEDDING_TIMEOUT=200
EMBEDDING_SERVICE_ENDPOINT=https://your-openai-endpoint.openai.azure.com/
EMBEDDING_SERVICE_DEPLOYMENT_NAME=text-embedding-ada-002
EMBEDDING_SERVICE_API_VERSION=2024-08-01-preview
EMBEDDING_SERVICE_MODEL_NAME=text-embedding-ada-002
EMBEDDING_SERVICE_API_KEY=your-embedding-api-key-if-not-using-managed-identity

# Transcription Provider Configuration
TRANSCRIPTION_PROVIDER=azure
SPEECH_USE_MANAGED_IDENTITY=true
SPEECH_TIMEOUT=200
SPEECH_SERVICE_REGION=centralindia
SPEECH_SERVICE_RESOURCE_ID=/subscriptions/your-subscription-id/resourceGroups/your-rg/providers/Microsoft.CognitiveServices/accounts/your-speech-service
SPEECH_SERVICE_ENDPOINT=https://centralindia.api.cognitive.microsoft.com/
SPEECH_SERVICE_DEPLOYMENT_NAME=whisper
SPEECH_SERVICE_API_VERSION=2024-08-01-preview
SPEECH_SERVICE_KEY=your-speech-api-key-if-not-using-managed-identity

# Vision Provider Configuration
VISION_PROVIDER=azure

# Storage Configuration
STORAGE_PROVIDER=azure_blob
STORAGE_USE_MANAGED_IDENTITY=true
STORAGE_CONTAINER_NAME=default
STORAGE_ACCOUNT_NAME=your-storage-account-name
STORAGE_CONNECTION_STRING=your-storage-connection-string-if-not-using-managed-identity
BLOB_ACCOUNT_URL=https://your-storage-account-name.blob.core.windows.net/
BLOB_CONNECTION_STRING=your-blob-connection-string-if-not-using-managed-identity
BLOB_SAS_TOKEN=your-blob-sas-token-if-needed

# Storage Container Configuration
VIDEO_CONTAINER_NAME=mmct-videocontainer
FRAMES_CONTAINER_NAME=mmct-framescontainer
TIMESTAMPS_CONTAINER_NAME=mmct-timestampscontainer
TRANSCRIPT_CONTAINER_NAME=mmct-transcriptcontainer
AUDIO_CONTAINER_NAME=mmct-audiocontainer
VIDEO_DESCRIPTION_CONTAINER_NAME=mmct-summary-n-transcript
BLOB_DOWNLOAD_DIR=media
BLOB_MANAGED_IDENTITY=true

# Azure Computer Vision Configuration
COMPUTER_VISION_ENDPOINT=https://your-computer-vision-endpoint.cognitiveservices.azure.com/
COMPUTER_VISION_API_VERSION=2024-02-01
COMPUTER_VISION_KEY=your-computer-vision-api-key-if-not-using-managed-identity

# Security Configuration
KEYVAULT_URL=https://your-keyvault.vault.azure.net/
ENABLE_SECRETS_MANAGER=false
MANAGED_IDENTITY_CLIENT_ID=your-managed-identity-client-id
MANAGED_IDENTITY=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mmct-dev.log
LOG_ENABLE_JSON=false
LOG_ENABLE_FILE=true
LOG_MAX_FILE_SIZE=10 MB
LOG_RETENTION_DAYS=7

# OpenAI Configuration (for hybrid setups)
OPENAI_MODEL_NAME=gpt-4o
OPENAI_VISION_MODEL_NAME=gpt-4o-mini
OPENAI_API_VERSION=2024-08-01-preview
OPENAI_VISION_API_VERSION=2024-08-01-preview
OPENAI_EMBEDDING_MODEL_NAME=text-embedding-ada-002
OPENAI_EMBEDDING_API_VERSION=2023-05-15
OPENAI_SPEECH_SERVICE_MODEL_NAME=whisper-1
OPENAI_SPEECH_SERVICE_API_VERSION=2024-06-01
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_API_KEY=your-openai-api-key-if-using-openai
OPENAI_SPEECH_SERVICE_KEY=your-openai-speech-key-if-using-openai
OPENAI_EMBEDDING_KEY=your-openai-embedding-key-if-using-openai

# Event Hub Configuration
EVENT_HUB_HOSTNAME=your-eventhub-namespace.servicebus.windows.net
QUERY_EVENT_HUB_NAME=query-eventhub
INGESTION_EVENT_HUB_NAME=ingestion-eventhub

# Legacy Environment Variables (for backward compatibility)
AZURE_OPENAI_ENDPOINT=https://your-openai-endpoint.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-if-not-using-managed-identity
AZURE_AI_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_AI_SEARCH_KEY=your-azure-ai-search-key-if-not-using-managed-identity
SEARCH_SERVICE_ENDPOINT=https://your-search-service.search.windows.net
SEARCH_SERVICE_KEY=your-search-service-key-if-not-using-managed-identity