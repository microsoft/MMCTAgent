{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "eventhubName": {
            "type": "String"
        },
        "ingestionPipelineTopicName":{
            "type":"string"
        },
        "queryPipelineTopicName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.EventHub/namespaces",
            "apiVersion": "2024-05-01-preview",
            "name": "[parameters('eventhubName')]",
            "location": "Central India",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 5
            },
            "properties": {
                "geoDataReplication": {
                    "maxReplicationLagDurationInSeconds": 0,
                    "locations": [
                        {
                            "locationName": "Central India",
                            "roleType": "Primary"
                        }
                    ]
                },
                "minimumTlsVersion": "1.2",
                "publicNetworkAccess": "Enabled",
                "disableLocalAuth": true,
                "zoneRedundant": true,
                "isAutoInflateEnabled": false,
                "maximumThroughputUnits": 0,
                "kafkaEnabled": true
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/authorizationrules",
            "apiVersion": "2024-05-01-preview",
            "name": "[concat(parameters('eventhubName'), '/RootManageSharedAccessKey')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('eventhubName'))]"
            ],
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "apiVersion": "2024-05-01-preview",
            "name": "[concat(parameters('eventhubName'), '/',parameters('queryPipelineTopicName'))]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('eventhubName'))]"
            ],
            "properties": {
                "messageTimestampDescription": {
                    "timestampType": "LogAppend"
                },
                "retentionDescription": {
                    "cleanupPolicy": "Delete",
                    "retentionTimeInHours": 3
                },
                "messageRetentionInDays": 1,
                "partitionCount": 2,
                "status": "Active"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "apiVersion": "2024-05-01-preview",
            "name": "[concat(parameters('eventhubName'), '/', parameters('ingestionPipelineTopicName'))]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('eventhubName'))]"
            ],
            "properties": {
                "messageTimestampDescription": {
                    "timestampType": "LogAppend"
                },
                "retentionDescription": {
                    "cleanupPolicy": "Delete",
                    "retentionTimeInHours": 3
                },
                "messageRetentionInDays": 1,
                "partitionCount": 2,
                "status": "Active"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/networkrulesets",
            "apiVersion": "2024-05-01-preview",
            "name": "[concat(parameters('eventhubName'), '/default')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('eventhubName'))]"
            ],
            "properties": {
                "publicNetworkAccess": "Enabled",
                "defaultAction": "Allow",
                "virtualNetworkRules": [],
                "ipRules": [],
                "trustedServiceAccessEnabled": false
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "apiVersion": "2024-05-01-preview",
            "name": "[concat(parameters('eventhubName'), '/', parameters('queryPipelineTopicName'), '/$Default')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('eventhubName'), parameters('queryPipelineTopicName'))]",
                "[resourceId('Microsoft.EventHub/namespaces', parameters('eventhubName'))]"
            ],
            "properties": {}
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "apiVersion": "2024-05-01-preview",
            "name": "[concat(parameters('eventhubName'), '/',parameters('ingestionPipelineTopicName'),'/$Default')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('eventhubName'), parameters('ingestionPipelineTopicName'))]",
                "[resourceId('Microsoft.EventHub/namespaces', parameters('eventhubName'))]"
            ],
            "properties": {}
        }
    ]
}