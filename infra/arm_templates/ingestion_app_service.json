{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ingestionProducerAppName": {
            "type": "String"
        },
        "serverfarmsASPId": {
            "type": "String"
        },
        "ingestionProducerImageAndTag":{
            "type": "string"
        },
        "clientIdOfIdentity": {
            "type": "string"
        },
        "userAssignedIdentityScope": {
            "type": "string"
        },
        "storageAccountName":{
            "type": "string"
        },
        "speechResourceId":{
            "type": "string"
        },
        "speechRegion":{
            "type": "string"
        },
        "azureOpenAIName":{
            "type": "string"
        },
        "aiSearchServiceName":{
            "type": "string"
        },
        "eventhubName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2024-04-01",
            "name": "[parameters('ingestionProducerAppName')]",
            "location": "Central India",
            "kind": "app,linux",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[parameters('userAssignedIdentityScope')]": {}
                }
            },
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('ingestionProducerAppName'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(parameters('ingestionProducerAppName'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[parameters('serverfarmsASPId')]",
                "reserved": true,
                "isXenon": false,
                "hyperV": false,
                "dnsConfiguration": {},
                "vnetRouteAllEnabled": false,
                "vnetImagePullEnabled": false,
                "vnetContentShareEnabled": false,
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "linuxFxVersion": "sitecontainers",
                    "acrUseManagedIdentityCreds": true,
                    "alwaysOn": true,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 0
                },
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": false,
                "clientCertEnabled": false,
                "clientCertMode": "Required",
                "hostNamesDisabled": false,
                "ipMode": "IPv4",
                "vnetBackupRestoreEnabled": false,
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": true,
                "endToEndEncryptionEnabled": false,
                "redundancyMode": "None",
                "publicNetworkAccess": "Enabled",
                "storageAccountRequired": false,
                "keyVaultReferenceIdentity": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('ingestionProducerAppName'), '/ftp')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('ingestionProducerAppName'))]"
            ],
            "properties": {
                "allow": false
            }
        },
        {
            "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('ingestionProducerAppName'), '/scm')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('ingestionProducerAppName'))]"
            ],
            "properties": {
                "allow": false
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('ingestionProducerAppName'), '/web')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('ingestionProducerAppName'))]"
            ],
            "properties": {
                "numberOfWorkers": 1,
                "defaultDocuments": [
                    "Default.htm",
                    "Default.html",
                    "Default.asp",
                    "index.htm",
                    "index.html",
                    "iisstart.htm",
                    "default.aspx",
                    "index.php",
                    "hostingstart.html"
                ],
                "netFrameworkVersion": "v4.0",
                "linuxFxVersion": "sitecontainers",
                "requestTracingEnabled": false,
                "remoteDebuggingEnabled": false,
                "httpLoggingEnabled": false,
                "acrUseManagedIdentityCreds": true,
                "acrUserManagedIdentityID": "[parameters('clientIdOfIdentity')]",
                "logsDirectorySizeLimit": 35,
                "detailedErrorLoggingEnabled": false,
                "publishingUsername": "REDACTED",
                "scmType": "None",
                "use32BitWorkerProcess": true,
                "webSocketsEnabled": false,
                "alwaysOn": true,
                "managedPipelineMode": "Integrated",
                "virtualApplications": [
                    {
                        "virtualPath": "/",
                        "physicalPath": "site\\wwwroot",
                        "preloadEnabled": true
                    }
                ],
                "loadBalancing": "LeastRequests",
                "experiments": {
                    "rampUpRules": []
                },
                "autoHealEnabled": false,
                "vnetRouteAllEnabled": false,
                "vnetPrivatePortsCount": 0,
                "publicNetworkAccess": "Enabled",
                "localMySqlEnabled": false,
                "xManagedServiceIdentityId": 10557,
                "ipSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 2147483647,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 2147483647,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictionsUseMain": false,
                "http20Enabled": false,
                "minTlsVersion": "1.2",
                "scmMinTlsVersion": "1.2",
                "ftpsState": "FtpsOnly",
                "preWarmedInstanceCount": 0,
                "elasticWebAppScaleLimit": 0,
                "functionsRuntimeScaleMonitoringEnabled": false,
                "minimumElasticInstanceCount": 0,
                "azureStorageAccounts": {}
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('ingestionProducerAppName'), '/appsettings')]",
            "dependsOn": [
              "[resourceId('Microsoft.Web/sites', parameters('ingestionProducerAppName'))]"
            ],
            "properties": {
                "AZURE_CLIENT_ID": "[parameters('clientIdOfIdentity')]",
                "JWT_EXPIRATION_TIME": "10",
                "JWT_SECRET_KEY": "SECRET_KEY@OS",
                "JWT_ALGORITHM": "HS256",
                "BLOB_CONTAINER_NAME": "mmct-videocontainer",
                "FRAMES_CONTAINER_NAME": "mmct-framescontainer",
                "TIMESTAMPS_CONTAINER_NAME": "mmct-timestampscontainer",
                "TRANSCRIPT_CONTAINER_NAME": "mmct-transcriptcontainer",
                "AUDIO_CONTAINER_NAME": "mmct-audiocontainer",
                "SUMMARY_CONTAINER_NAME": "mmct-summary-n-transcript",
                "BLOB_DOWNLOAD_DIR": "media",
                "BLOB_MANAGED_IDENTITY": "True",
                "BLOB_ACCOUNT_URL": "[concat('https://', parameters('storageAccountName'), '.blob.core.windows.net')]",
                "AZURE_SPEECH_SERVICE_REGION": "[parameters('speechRegion')]",
                "AZURE_SPEECH_SERVICE_RESOURCE_ID": "[parameters('speechResourceId')]",
                "AZURECV_ENDPOINT": "",
                "AZURECV_API_VERSION": "",
                "AZURECV_MANAGED_IDENTITY": "True",
                "LLM_PROVIDER": "azure",
                "AZURE_OPENAI_ENDPOINT": "[concat('https://', parameters('azureOpenAIName'), '.openai.azure.com/')]",
                "AZURE_OPENAI_DEPLOYMENT": "gpt-4o",
                "AZURE_OPENAI_MODEL": "gpt-4o",
                "AZURE_OPENAI_API_VERSION": "2024-08-01-preview",
                "AZURE_OPENAI_VISION_DEPLOYMENT": "gpt-4o",
                "AZURE_OPENAI_VISION_MODEL": "gpt-4o",
                "AZURE_OPENAI_VISION_API_VERSION": "2024-08-01-preview",
                "AZURE_OPENAI_EMBEDDING_ENDPOINT":"[concat('https://', parameters('azureOpenAIName'), '.openai.azure.com/')]",
                "AZURE_EMBEDDING_DEPLOYMENT": "text-embedding-ada-002",
                "AZURE_EMBEDDING_API_VERSION": "2023-05-15",
                "AZURE_EMBEDDING_MODEL": "text-embedding-ada-002",
                "AZURE_OPENAI_STT_ENDPOINT": "[concat('https://', parameters('azureOpenAIName'), '.openai.azure.com/')]",
                "AZURE_OPENAI_STT_DEPLOYMENT": "whisper",
                "AZURE_OPENAI_STT_MODEL": "whisper",
                "AZURE_OPENAI_STT_API_VERSION": "2024-06-01",
                "OPENAI_MODEL": "gpt-4o",
                "OPENAI_VISION_MODEL": "gpt-4o-mini",
                "OPENAI_API_VERSION": "2024-08-01-preview",
                "OPENAI_VISION_API_VISION": "2024-08-01-preview",
                "OPENAI_EMBEDDING_MODEL": "text-embedding-ada-002",
                "OPENAI_EMBEDDING_API_VERSION": "2023-05-15",
                "OPENAI_STT_MODEL": "whisper",
                "OPENAI_STT_API_VERSION": "2024-06-01",
                "AZURE_OPENAI_MANAGED_IDENTITY": "True",
                "AZURE_AI_SEARCH_ENDPOINT": "[concat('https://', parameters('aiSearchServiceName'), '.search.windows.net')]",
                "AZURE_AI_SEARCH_CACHE_ENDPOINT": "[concat('https://', parameters('aiSearchServiceName'), '.search.windows.net')]",
                "CACHE_INDEX_NAME": "mmct-cache",
                "AZURE_OPENAI_MODEL_VERSION": "2024-08-06",
                "AZURE_OPENAI_EMBED_MODEL": "text-embedding-ada-002",
                "AZURE_OPENAI_WHISPER_ENDPOINT": "[concat('https://', parameters('azureOpenAIName'), '.openai.azure.com/openai/deployments/whisper/audio/translations?api-version2024-06-01')]",
                "WHISPER_DEPLOYMENT": "whisper",
                "MONGODB_BACKEND_URI" :"",
                "MMCT_CACHE_DB": "mmct_cache_logger",
                "MMCT_CACHE_LOG_COLLECTION_NAME": "caching_logs",
                "MMCT_INGESTION_DB": "mmct_ingestion_logger",
                "MMCT_INGESTION_LOG_COLLECTION_NAME": "ingestion_logs",
                "VIDEO_CONTAINER": "mmct-videocontainer",
                "AUDIO_CONTAINER": "mmct-audiocontainer",
                "TRANSCRIPT_CONTAINER": "mmct-transcriptcontainer",
                "TIMESTAMPS_CONTAINER": "mmct-timestampscontainer",
                "FRAMES_CONTAINER": "mmct-framescontainer",
                "EVENT_HUB_HOSTNAME": "[concat(parameters('eventhubName'), '.servicebus.windows.net')]",
                "QUERY_EVENT_HUB_NAME": "query-eventhub",
                "INGESTION_EVENT_HUB_NAME": "ingestion-eventhub"
            }
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('ingestionProducerAppName'), '/', parameters('ingestionProducerAppName'), '.azurewebsites.net')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('ingestionProducerAppName'))]"
            ],
            "properties": {
                "siteName": "[parameters('ingestionProducerAppName')]",
                "hostNameType": "Verified"
            }
        },
        {
            "type": "Microsoft.Web/sites/sitecontainers",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('ingestionProducerAppName'), '/main')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('ingestionProducerAppName'))]"
            ],
            "properties": {
                "image": "[parameters('ingestionProducerImageAndTag')]",
                "targetPort": "8000",
                "isMain": true,
                "authType": "UserAssigned",
                "userManagedIdentityClientId": "[parameters('clientIdOfIdentity')]",
                "volumeMounts": [],
                "environmentVariables": []
            }
        }
    ]
}