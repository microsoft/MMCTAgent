{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "mainAppName": {
            "type": "String"
        },
        "serverfarmsASPId": {
            "type": "String"
        },
        "mainAppImageandTag":{
            "type": "string"
        },
        "clientIdOfIdentity": {
            "type": "string"
        },
        "userAssignedIdentityScope": {
            "type": "string"
        },
        "storageAccountName":{
            "type": "string"
        },
        "speechResourceId":{
            "type": "string"
        },
        "speechRegion":{
            "type": "string"
        },
        "azureOpenAIName":{
            "type": "string"
        },
        "aiSearchServiceName":{
            "type": "string"
        },
        "eventhubName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2024-04-01",
            "name": "[parameters('mainAppName')]",
            "location": "Central India",
            "kind": "app,linux",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[parameters('userAssignedIdentityScope')]": {}
                }
            },
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('mainAppName'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(parameters('mainAppName'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[parameters('serverfarmsASPId')]",
                "reserved": true,
                "isXenon": false,
                "hyperV": false,
                "dnsConfiguration": {},
                "vnetRouteAllEnabled": false,
                "vnetImagePullEnabled": false,
                "vnetContentShareEnabled": false,
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "linuxFxVersion": "sitecontainers",
                    "acrUseManagedIdentityCreds": true,
                    "alwaysOn": true,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 0
                },
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": false,
                "clientCertEnabled": false,
                "clientCertMode": "Required",
                "hostNamesDisabled": false,
                "ipMode": "IPv4",
                "vnetBackupRestoreEnabled": false,
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": true,
                "endToEndEncryptionEnabled": false,
                "redundancyMode": "None",
                "publicNetworkAccess": "Enabled",
                "storageAccountRequired": false,
                "keyVaultReferenceIdentity": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('mainAppName'), '/ftp')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('mainAppName'))]"
            ],
            "properties": {
                "allow": false
            }
        },
        {
            "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('mainAppName'), '/scm')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('mainAppName'))]"
            ],
            "properties": {
                "allow": false
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('mainAppName'), '/web')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('mainAppName'))]"
            ],
            "properties": {
                "numberOfWorkers": 1,
                "defaultDocuments": [
                    "Default.htm",
                    "Default.html",
                    "Default.asp",
                    "index.htm",
                    "index.html",
                    "iisstart.htm",
                    "default.aspx",
                    "index.php",
                    "hostingstart.html"
                ],
                "netFrameworkVersion": "v4.0",
                "linuxFxVersion": "sitecontainers",
                "requestTracingEnabled": false,
                "remoteDebuggingEnabled": false,
                "httpLoggingEnabled": false,
                "acrUseManagedIdentityCreds": true,
                "acrUserManagedIdentityID": "[parameters('clientIdOfIdentity')]",
                "logsDirectorySizeLimit": 35,
                "detailedErrorLoggingEnabled": false,
                "publishingUsername": "REDACTED",
                "scmType": "None",
                "use32BitWorkerProcess": true,
                "webSocketsEnabled": false,
                "alwaysOn": true,
                "managedPipelineMode": "Integrated",
                "virtualApplications": [
                    {
                        "virtualPath": "/",
                        "physicalPath": "site\\wwwroot",
                        "preloadEnabled": true
                    }
                ],
                "loadBalancing": "LeastRequests",
                "experiments": {
                    "rampUpRules": []
                },
                "autoHealEnabled": false,
                "vnetRouteAllEnabled": false,
                "vnetPrivatePortsCount": 0,
                "publicNetworkAccess": "Enabled",
                "localMySqlEnabled": false,
                "xManagedServiceIdentityId": 10557,
                "ipSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 2147483647,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 2147483647,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictionsUseMain": false,
                "http20Enabled": false,
                "minTlsVersion": "1.2",
                "scmMinTlsVersion": "1.2",
                "ftpsState": "FtpsOnly",
                "preWarmedInstanceCount": 0,
                "elasticWebAppScaleLimit": 0,
                "functionsRuntimeScaleMonitoringEnabled": false,
                "minimumElasticInstanceCount": 0,
                "azureStorageAccounts": {}
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('mainAppName'), '/appsettings')]",
            "dependsOn": [
              "[resourceId('Microsoft.Web/sites', parameters('mainAppName'))]"
            ],
            "properties": {
                "AZURE_CLIENT_ID": "[parameters('clientIdOfIdentity')]",
                "MANAGED_IDENTITY_CLIENT_ID": "[parameters('clientIdOfIdentity')]",
                
                "VIDEO_CONTAINER_NAME": "mmct-videocontainer",
                "FRAMES_CONTAINER_NAME": "mmct-framescontainer",
                "TIMESTAMPS_CONTAINER_NAME": "mmct-timestampscontainer",
                "TRANSCRIPT_CONTAINER_NAME": "mmct-transcriptcontainer",
                "AUDIO_CONTAINER_NAME": "mmct-audiocontainer",
                "SUMMARY_CONTAINER_NAME": "mmct-summary-n-transcript",
                "BLOB_DOWNLOAD_DIR": "media",
                "BLOB_MANAGED_IDENTITY": "True",
                "BLOB_ACCOUNT_URL": "[concat('https://', parameters('storageAccountName'), '.blob.core.windows.net')]",
                "STORAGE_ACCOUNT_NAME": "[parameters('storageAccountName')]",
                "STORAGE_CONTAINER_NAME": "mmct-videocontainer",
                "STORAGE_USE_MANAGED_IDENTITY": "true",
                "STORAGE_PROVIDER": "azure_blob",
                
                "SPEECH_USE_MANAGED_IDENTITY": "true",
                "SPEECH_TIMEOUT": "200",
                "SPEECH_SERVICE_REGION": "[parameters('speechRegion')]",
                "SPEECH_SERVICE_RESOURCE_ID": "[parameters('speechResourceId')]",
                "SPEECH_SERVICE_ENDPOINT": "https://centralindia.api.cognitive.microsoft.com/",
                "SPEECH_SERVICE_DEPLOYMENT_NAME": "whisper",
                "SPEECH_SERVICE_API_VERSION": "2024-08-01-preview",
                "SPEECH_SERVICE_KEY": "",
                
                "COMPUTER_VISION_ENDPOINT": "",
                "COMPUTER_VISION_API_VERSION": "2024-02-01",
                "COMPUTER_VISION_KEY": "",
                
                "MANAGED_IDENTITY": "true",
                "LLM_PROVIDER": "azure",
                "LLM_USE_MANAGED_IDENTITY": "true",
                "LLM_TIMEOUT": "200",
                "LLM_MAX_RETRIES": "2",
                "LLM_TEMPERATURE": "0.0",
                "LLM_ENDPOINT": "[concat('https://', parameters('azureOpenAIName'), '.openai.azure.com/')]",
                "LLM_DEPLOYMENT_NAME": "gpt-4o",
                "LLM_MODEL_NAME": "gpt-4o",
                "LLM_API_VERSION": "2024-08-01-preview",
                "LLM_API_KEY": "",
                "LLM_VISION_DEPLOYMENT_NAME": "gpt-4o",
                "LLM_VISION_API_VERSION": "2024-08-01-preview",
                
                "EMBEDDING_PROVIDER": "azure",
                "EMBEDDING_USE_MANAGED_IDENTITY": "true",
                "EMBEDDING_TIMEOUT": "200",
                "EMBEDDING_SERVICE_ENDPOINT": "[concat('https://', parameters('azureOpenAIName'), '.openai.azure.com/')]",
                "EMBEDDING_SERVICE_DEPLOYMENT_NAME": "text-embedding-ada-002",
                "EMBEDDING_SERVICE_API_VERSION": "2024-08-01-preview",
                "EMBEDDING_SERVICE_MODEL_NAME": "text-embedding-ada-002",
                "EMBEDDING_SERVICE_API_KEY": "",
                
                "SEARCH_PROVIDER": "azure_ai_search",
                "SEARCH_USE_MANAGED_IDENTITY": "true",
                "SEARCH_INDEX_NAME": "default",
                "SEARCH_TIMEOUT": "30",
                "SEARCH_ENDPOINT": "[concat('https://', parameters('aiSearchServiceName'), '.search.windows.net')]",
                "SEARCH_API_KEY": "",
                "AZURE_AI_SEARCH_ENDPOINT": "[concat('https://', parameters('aiSearchServiceName'), '.search.windows.net')]",
                "AZURE_AI_SEARCH_KEY": "",
                "SEARCH_SERVICE_ENDPOINT": "[concat('https://', parameters('aiSearchServiceName'), '.search.windows.net')]",
                "SEARCH_SERVICE_KEY": "",
                
                "TRANSCRIPTION_PROVIDER": "azure",
                
                "VISION_PROVIDER": "azure",
                
                "EVENT_HUB_HOSTNAME": "[concat(parameters('eventhubName'), '.servicebus.windows.net')]",
                "QUERY_EVENT_HUB_NAME": "query-eventhub",
                "INGESTION_EVENT_HUB_NAME": "ingestion-eventhub",
                
                "OPENAI_MODEL_NAME": "gpt-4o",
                "OPENAI_VISION_MODEL_NAME": "gpt-4o-mini",
                "OPENAI_API_VERSION": "2024-08-01-preview",
                "OPENAI_VISION_API_VERSION": "2024-08-01-preview",
                "OPENAI_EMBEDDING_MODEL_NAME": "text-embedding-ada-002",
                "OPENAI_EMBEDDING_API_VERSION": "2023-05-15",
                "OPENAI_SPEECH_SERVICE_MODEL_NAME": "whisper-1",
                "OPENAI_SPEECH_SERVICE_API_VERSION": "2024-06-01",
                "OPENAI_SPEECH_SERVICE_KEY": "",
                
                "APP_NAME": "MMCT Agent",
                "APP_VERSION": "1.0.0",
                "ENVIRONMENT": "production",
                "DEBUG": "false",
                "LOG_LEVEL": "INFO",
                "LOG_FILE": "",
                "LOG_ENABLE_JSON": "false",
                "LOG_ENABLE_FILE": "false",
                "LOG_MAX_FILE_SIZE": "10 MB",
                "LOG_RETENTION_DAYS": "7",
                
                "KEYVAULT_URL": "",
                "ENABLE_SECRETS_MANAGER": "false"
            }
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('mainAppName'), '/', parameters('mainAppName'), '.azurewebsites.net')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('mainAppName'))]"
            ],
            "properties": {
                "siteName": "[parameters('mainAppName')]",
                "hostNameType": "Verified"
            }
        },
        {
            "type": "Microsoft.Web/sites/sitecontainers",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('mainAppName'), '/main')]",
            "location": "Central India",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('mainAppName'))]"
            ],
            "properties": {
                "image": "[parameters('mainAppImageandTag')]",
                "targetPort": "8000",
                "isMain": true,
                "authType": "UserAssigned",
                "userManagedIdentityClientId": "[parameters('clientIdOfIdentity')]",
                "volumeMounts": [],
                "environmentVariables": []
            }
        }
    ]
}