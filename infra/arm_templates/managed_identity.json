{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "managedIdentityName": {
        "type": "string"
      },
      "resourceGroupName": {
        "type": "string"
      },
      "storageAccountId": {
        "type": "string"
      },
      "acrId": {
        "type": "string"
      },
      "location": {
        "type": "string"
      }
    },
    "resources": [
      {
        "type": "Microsoft.Resources/resourceGroups/providers/userAssignedIdentities",
        "apiVersion": "2023-01-31",
        "name": "[format('{0}/{1}', parameters('resourceGroupName'), parameters('managedIdentityName'))]",
        "location": "[parameters('location')]"
      },
      {
        "type": "Microsoft.Authorization/roleAssignments",
        "apiVersion": "2022-04-01",
        "name": "[guid(parameters('managedIdentityName'), parameters('storageAccountId'), 'StorageBlobDataContributor')]",
        "properties": {
          "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'ba92f5b4-2d11-453d-a403-e96b0029c9fe')]",
          "principalId": "[reference(resourceId(parameters('resourceGroupName'), 'Microsoft.ManagedIdentity/userAssignedIdentities', parameters('managedIdentityName')), '2023-01-31').principalId]",
          "scope": "[parameters('storageAccountId')]"
        }
      },
      {
        "type": "Microsoft.Authorization/roleAssignments",
        "apiVersion": "2022-04-01",
        "name": "[guid(parameters('managedIdentityName'), parameters('acrId'), 'AcrPull')]",
        "properties": {
          "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '7f951dda-4ed3-4680-a7ca-43fe172d538d')]",
          "principalId": "[reference(resourceId(parameters('resourceGroupName'), 'Microsoft.ManagedIdentity/userAssignedIdentities', parameters('managedIdentityName')), '2023-01-31').principalId]",
          "scope": "[parameters('acrId')]"
        }
      }
    ]
  }
  